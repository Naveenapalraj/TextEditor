{{page-title "SigninPage"}}
<div class='signInPage'>
  <h1>Sign In</h1>
  <form method="GET" action="http://localhost:8080/textEditorApp/userDetails">
    <section>
      <i class="fa fa-envelope" aria-hidden="true"></i>
      <Input
        @type='email'
        @id="email"
        autocomplete='off'
        @name = "email"
        @value ={{this.email}}
        placeholder="email"
      />
    </section>
    <section>
      <i class="fa fa-unlock" aria-hidden="true"></i>
      <Input
        @type='password'
        @id="password"
        autocomplete='off'
        @name = "password"
        @value ={{this.password}}
        placeholder="password"
      />
    </section>
    <button type="submit" class="signInBtn">Sign in</button>
  </form>
</div>
